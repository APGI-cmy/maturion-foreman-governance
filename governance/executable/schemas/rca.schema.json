{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maturion.com/schemas/governance/rca.schema.json",
  "title": "Root Cause Analysis",
  "description": "Structured RCA required after stop-and-fix or repaired gate failures.",
  "type": "object",
  "required": [
    "schema_version",
    "reported_at",
    "incident_summary",
    "root_causes",
    "corrective_actions",
    "preventative_actions"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "reported_at": {
      "type": "string",
      "format": "date-time"
    },
    "incident_summary": {
      "type": "string",
      "minLength": 10
    },
    "root_causes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "corrective_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "preventative_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "evidence_paths": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}

{
  "schema_version": "1.0.0",
  "updated_at": "2026-02-10",
  "source": "governance/policy/minimizing_language_patterns.json",
  "patterns": [
    {
      "id": "only_failure_context",
      "pattern": "\\bonly\\b[^.\\n]{0,60}\\b(fail(?:ing|ure|ures)?|warning(?:s)?|issue(?:s)?|problem(?:s)?|debt|error(?:s)?|doc(?:s|umentation)?|lint(?:ing)?|test(?:s)?)\\b",
      "description": "Only + failure/warning/debt context"
    },
    {
      "id": "just_failure_context",
      "pattern": "\\bjust\\b[^.\\n]{0,60}\\b(fail(?:ing|ure|ures)?|warning(?:s)?|issue(?:s)?|problem(?:s)?|debt|error(?:s)?|doc(?:s|umentation)?|lint(?:ing)?|test(?:s)?)\\b",
      "description": "Just + failure/warning/debt context"
    },
    {
      "id": "minor_failure_context",
      "pattern": "\\bminor\\b[^.\\n]{0,60}\\b(fail(?:ing|ure|ures)?|warning(?:s)?|issue(?:s)?|problem(?:s)?|debt|error(?:s)?|doc(?:s|umentation)?|lint(?:ing)?|test(?:s)?)\\b",
      "description": "Minor + failure/warning/debt context"
    },
    {
      "id": "non_blocking",
      "pattern": "\\bnon[- ]?blocking\\b",
      "description": "Non-blocking phrasing"
    },
    {
      "id": "non_critical",
      "pattern": "\\bnon[- ]?critical\\b",
      "description": "Non-critical phrasing"
    },
    {
      "id": "good_enough",
      "pattern": "\\bgood enough\\b",
      "description": "Good enough phrasing"
    },
    {
      "id": "trivial_failure_context",
      "pattern": "\\btrivial\\b[^.\\n]{0,60}\\b(fail(?:ing|ure|ures)?|warning(?:s)?|issue(?:s)?|problem(?:s)?|debt|error(?:s)?|test(?:s)?)\\b",
      "description": "Trivial + failure/warning/debt context"
    },
    {
      "id": "small_failure_context",
      "pattern": "\\bsmall\\b[^.\\n]{0,60}\\b(fail(?:ing|ure|ures)?|warning(?:s)?|issue(?:s)?|problem(?:s)?|debt|error(?:s)?|test(?:s)?)\\b",
      "description": "Small + failure/warning/debt context"
    },
    {
      "id": "easy_fix_context",
      "pattern": "\\beasy\\b[^.\\n]{0,60}\\b(fix(?:es|ing)?|issue(?:s)?|problem(?:s)?|debt|error(?:s)?|warning(?:s)?|test(?:s)?|fail(?:ing|ure|ures)?)\\b",
      "description": "Easy + fix/failure context"
    },
    {
      "id": "mostly_complete",
      "pattern": "\\bmostly\\b\\s+(complete|done|finished|passing|green)\\b",
      "description": "Mostly complete/passing phrasing"
    }
  ]
}

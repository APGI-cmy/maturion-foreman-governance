{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Allowed Warnings Schema",
  "description": "Schema for governance-approved warning suppressions in the Zero-Warning Policy",
  "type": "object",
  "required": ["version", "lastUpdated", "warnings"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "description": "Date when the allowlist was last updated",
      "format": "date"
    },
    "warnings": {
      "type": "array",
      "description": "List of approved warnings that can be temporarily tolerated",
      "items": {
        "type": "object",
        "required": ["id", "pattern", "source", "reason", "target_wave", "approved_by", "created_at"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this allowed warning"
          },
          "pattern": {
            "type": "string",
            "description": "Regular expression pattern to match the warning"
          },
          "source": {
            "type": "string",
            "description": "Source of the warning (e.g., 'transitive dependency via next@14')"
          },
          "reason": {
            "type": "string",
            "description": "Justification for allowing this warning"
          },
          "target_wave": {
            "type": "string",
            "description": "The wave where we plan to eliminate this warning"
          },
          "approved_by": {
            "type": "string",
            "description": "Name of the person who approved this exception (must be Johan, not Foreman)",
            "pattern": "^(?!.*Foreman).*$"
          },
          "created_at": {
            "type": "string",
            "description": "ISO 8601 timestamp when this exception was created",
            "format": "date-time"
          },
          "parking_station_id": {
            "type": "string",
            "description": "Reference to the Parking Station entry for this tech debt"
          },
          "expires_at": {
            "type": "string",
            "description": "Optional expiration date for this exception",
            "format": "date-time"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata about this warning",
            "properties": {
              "package_name": {
                "type": "string",
                "description": "Name of the package causing the warning"
              },
              "package_version": {
                "type": "string",
                "description": "Version of the package"
              },
              "impact": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"],
                "description": "Impact level of this deprecation"
              },
              "upgrade_plan": {
                "type": "string",
                "description": "Plan for upgrading/removing this dependency"
              }
            }
          }
        }
      }
    }
  }
}

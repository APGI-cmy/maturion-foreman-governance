{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maturion.com/schemas/governance/prehandover_proof.schema.json",
  "title": "Prehandover Proof",
  "description": "Structured prehandover proof for governed PRs.",
  "type": "object",
  "required": [
    "schema_version",
    "generated_at",
    "pr",
    "summary",
    "scope",
    "test_status",
    "evidence_paths"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "pr": {
      "type": "object",
      "required": ["number", "title", "head_sha"],
      "properties": {
        "number": {
          "type": "integer",
          "minimum": 1
        },
        "title": {
          "type": "string"
        },
        "head_sha": {
          "type": "string",
          "minLength": 7
        }
      },
      "additionalProperties": false
    },
    "summary": {
      "type": "string",
      "minLength": 10
    },
    "scope": {
      "type": "string",
      "minLength": 5
    },
    "test_status": {
      "type": "string",
      "enum": ["PASS", "FAIL", "NOT_RUN"]
    },
    "evidence_paths": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
